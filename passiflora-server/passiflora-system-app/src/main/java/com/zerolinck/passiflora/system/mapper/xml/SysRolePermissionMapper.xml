<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zerolinck.passiflora.system.mapper.SysRolePermissionMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        bind_id, role_id, permission_id, create_by, update_by, create_time, update_time, del_flag, version
    </sql>

    <select id="page" resultType="com.zerolinck.passiflora.model.system.entity.SysRolePermission">
        SELECT * FROM sys_role_permission
        <where>
            del_flag = 0
            <if test="ew.sqlSegment != null and ew.sqlSegment != ''">
                AND ${ew.sqlSegment}
            </if>
        </where>
        <if test="sortWrapper.sqlSegment == null or sortWrapper.sqlSegment == ''">
            ORDER BY bind_id ASC
        </if>
        <if test="sortWrapper.sqlSegment != null and sortWrapper.sqlSegment != ''">
            ${sortWrapper.sqlSegment}
        </if>
    </select>

    <delete id="deleteByIds">
        UPDATE sys_role_permission SET update_time = now(),
                                update_by = #{updateBy},
                                del_flag = 1
        WHERE bind_id IN
        <foreach item="id" index="index" collection="bindIds" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>