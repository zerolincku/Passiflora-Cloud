<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zerolinck.passiflora.iam.mapper.SysPositionDataScopeMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        scope_id, position_id, org_id, data_scope, create_by, update_by, create_time, update_time, del_flag, version
    </sql>

    <select id="page" resultType="com.zerolinck.passiflora.model.iam.entity.SysPositionDataScope">
        SELECT * FROM sys_position_data_scope
        <where>
            del_flag = 0
            <if test="ew.sqlSegment != null and ew.sqlSegment != ''">
                AND ${ew.sqlSegment}
            </if>
        </where>
        <if test="sortWrapper.sqlSegment == null or sortWrapper.sqlSegment == ''">
            ORDER BY scope_id ASC
        </if>
        <if test="sortWrapper.sqlSegment != null and sortWrapper.sqlSegment != ''">
            ${sortWrapper.sqlSegment}
        </if>
    </select>

    <delete id="deleteByIds">
        UPDATE sys_position_data_scope SET update_time = now(),
                                update_by = #{updateBy},
                                del_flag = 1
        WHERE scope_id IN
        <foreach item="id" index="index" collection="scopeIds" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>